<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    tools:context="ir.mhdr.bmi.UpdateFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ProgressBar
            android:id="@+id/progressBarUpdate"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:indeterminate="false"
            android:max="100" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textViewProgressPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/progressBarUpdate"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="15dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textViewProgressBytes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/progressBarUpdate"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/buttonStopUpdate"
            style="?attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewProgressPercent"
            android:text="@string/cancelDownload" />

    </RelativeLayout>

</FrameLayout>
